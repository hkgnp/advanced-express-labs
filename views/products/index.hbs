{{#extends 'base'}}

{{#block 'title'}} Index of all Posters {{/block}}

{{#block 'content'}}
<div class="table-responsive table-dark">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Cost (in cents)</th>
        <th>Description</th>
        <th>Date</th>
        <th>Stock</th>
        <th>Height</th>
        <th>Width</th>
        <th>Category</th>
        <th>Tags</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{ this.title }}</td>
        <td>{{ this.cost }}</td>
        <td>{{ this.description }}</td>
        <td>{{ dateFormat this.date format='DD-MM-YYYY' }}</td>
        <td>{{ this.stock }}</td>
        <td>{{ this.height }}</td>
        <td>{{ this.width }}</td>
        <td>{{ this.category.name }}</td>
        <td>{{#each this.tags}}
          <span class="badge badge-pill badge-info">{{this.name}}</span>
          {{/each}}</td>
        <td>
          <a href="/products/{{ this.id }}/update" class="btn btn-primary btn-sm"
            >Update</a
          ><a href="/products/{{ this.id }}/delete" class="btn btn-danger ml-2 btn-sm"
            >Delete</a
          >
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/block}}
{{/extends}}
